---
import BaseLayout from '@layouts/BaseLayout.astro';
import { withBase } from '@utils/url';
import { PERSONAL_INFO, SOCIAL_LINKS } from '@utils/constants';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="min-h-[80vh] flex items-center justify-center px-6">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Photo -->
      <div class="mb-8 inline-block">
        <img 
          src={PERSONAL_INFO.profilePhoto} 
          alt={PERSONAL_INFO.profilePhotoAlt}
          class="w-32 h-32 rounded-full object-cover mx-auto ring-4 ring-neutral-200"
        />
      </div>

      <!-- Name & Title -->
      <h1 class="text-5xl md:text-6xl font-bold text-neutral-900 mb-4 tracking-tight">
        {PERSONAL_INFO.fullName}
      </h1>
      <p class="text-xl md:text-2xl text-neutral-600 mb-8">
        {PERSONAL_INFO.title}
      </p>

      <!-- Introduction -->
      <div class="max-w-2xl mx-auto mb-12">
        <p class="text-lg text-neutral-700 leading-relaxed">
          Passionné par le développement logiciel et l'architecture système, 
          je conçois des solutions élégantes et performantes qui répondent aux défis techniques complexes.
        </p>
      </div>

      <!-- Skills Summary -->
      <div class="mb-12">
        <h2 class="text-sm uppercase tracking-wider text-neutral-500 mb-6">Compétences principales</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {['Architecture Logicielle', 'Développement Full-Stack', 'DevOps', 'Leadership', 'Résolution de Problèmes'].map((skill) => (
            <span class="px-4 py-2 bg-white border border-neutral-200 rounded-full text-sm text-neutral-700 hover:border-accent hover:text-accent transition-colors">
              {skill}
            </span>
          ))}
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href={withBase('/realisations')}
          class="px-8 py-3 bg-neutral-900 text-white rounded-lg hover:bg-accent transition-colors font-medium"
        >
          Voir mes réalisations
        </a>
        <a 
          href={withBase('/contact')}
          class="px-8 py-3 bg-white border-2 border-neutral-900 text-neutral-900 rounded-lg hover:bg-neutral-900 hover:text-white transition-colors font-medium"
        >
          Me contacter
        </a>
      </div>

      <!-- Social Links -->
      <div class="mt-12 flex justify-center gap-6">
        <a 
          href={SOCIAL_LINKS.github} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-neutral-600 hover:text-neutral-900 transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
        </a>
        <a 
          href={SOCIAL_LINKS.linkedin} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-neutral-600 hover:text-neutral-900 transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a 
          href={SOCIAL_LINKS.twitter} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-neutral-600 hover:text-neutral-900 transition-colors"
          aria-label="Twitter"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Quick Stats (Optional) -->
  <section class="py-16 px-6 border-t border-neutral-200">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-neutral-900 mb-2">10</div>
          <div class="text-sm text-neutral-600">Compétences</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-neutral-900 mb-2">5</div>
          <div class="text-sm text-neutral-600">Projets</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-neutral-900 mb-2">3+</div>
          <div class="text-sm text-neutral-600">Années d'expérience</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-neutral-900 mb-2">∞</div>
          <div class="text-sm text-neutral-600">Passion</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
