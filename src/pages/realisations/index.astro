---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { withBase } from '@utils/url';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout 
  title="R√©alisations"
  description="D√©couvrez mes principaux projets et r√©alisations techniques"
>
  <main class="py-20 px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <header class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-neutral-900 mb-6">
          Mes R√©alisations
        </h1>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          D√©couvrez les projets que j'ai men√©s, de la conception √† la r√©alisation, 
          en passant par les d√©fis techniques et humains relev√©s.
        </p>
      </header>

      <!-- Grille de projets -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedProjects.map(project => (
          <a 
            href={withBase(`/realisations/${project.slug}`)}
            class="group bg-white border-2 border-neutral-200 rounded-xl overflow-hidden hover:shadow-2xl hover:border-indigo-500 transition-all duration-300"
          >
            <!-- Image -->
            <div class="aspect-video bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center overflow-hidden">
              {project.data.image ? (
                <img 
                  src={project.data.image} 
                  alt={project.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                />
              ) : (
                <span class="text-6xl">üìÅ</span>
              )}
            </div>

            <!-- Contenu -->
            <div class="p-6">
              <!-- Badges technologies -->
              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.technologies.slice(0, 3).map(tech => (
                  <span class="px-2 py-1 text-xs font-medium bg-indigo-100 text-indigo-900 rounded-full">
                    {tech}
                  </span>
                ))}
                {project.data.technologies.length > 3 && (
                  <span class="px-2 py-1 text-xs font-medium bg-neutral-100 text-neutral-600 rounded-full">
                    +{project.data.technologies.length - 3}
                  </span>
                )}
              </div>

              <!-- Titre -->
              <h2 class="text-xl font-bold text-neutral-900 mb-3 group-hover:text-indigo-600 transition-colors">
                {project.data.title}
              </h2>

              <!-- Description -->
              <p class="text-neutral-600 mb-4 line-clamp-3">
                {project.data.description}
              </p>

              <!-- Date et contexte -->
              <div class="flex items-center justify-between text-sm text-neutral-500 mb-4">
                <span class="flex items-center gap-1">
                  <span>üìÖ</span>
                  {new Date(project.data.startDate).toLocaleDateString('fr-FR', { year: 'numeric', month: 'short' })}
                  {project.data.endDate && (
                    <span>
                      {' '}- {new Date(project.data.endDate).toLocaleDateString('fr-FR', { year: 'numeric', month: 'short' })}
                    </span>
                  )}
                </span>
              </div>

              <!-- CTA -->
              <div class="flex items-center text-indigo-600 font-medium group-hover:gap-3 transition-all">
                <span>Voir le projet</span>
                <span class="ml-2 group-hover:translate-x-1 transition-transform">‚Üí</span>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- CTA Comp√©tences -->
      <div class="mt-20 text-center p-12 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-2xl border-2 border-indigo-100">
        <h2 class="text-3xl font-bold text-neutral-900 mb-4">
          D√©couvrez mes comp√©tences
        </h2>
        <p class="text-lg text-neutral-600 mb-6 max-w-2xl mx-auto">
          Chaque projet mobilise un ensemble de comp√©tences techniques et humaines. 
          Explorez mon profil complet pour comprendre mon approche.
        </p>
        <a 
          href={withBase('/competences')}
          class="inline-block px-8 py-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors shadow-lg hover:shadow-xl"
        >
          Voir mes comp√©tences
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
