---
import { SEO_DEFAULT, PERSONAL_INFO, SOCIAL_LINKS } from '@utils/constants';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const { title, description, image, article = false } = Astro.props;

const pageTitle = title ? `${title} | ${SEO_DEFAULT.siteName}` : SEO_DEFAULT.siteName;
const pageDescription = description || SEO_DEFAULT.description;
const pageImage = image || '/images/aaa.jpg';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// JSON-LD structur√©
const jsonLd = article ? null : {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": PERSONAL_INFO.fullName,
  "jobTitle": PERSONAL_INFO.title,
  "email": PERSONAL_INFO.email,
  "url": Astro.site?.toString(),
  "sameAs": [
    SOCIAL_LINKS.github,
    SOCIAL_LINKS.linkedin,
  ],
};
---

<!-- Primary Meta Tags -->
<title>{pageTitle}</title>
<meta name="title" content={pageTitle} />
<meta name="description" content={pageDescription} />
<meta name="author" content={SEO_DEFAULT.author} />
<meta name="keywords" content={SEO_DEFAULT.keywords.join(', ')} />
<meta name="robots" content="index, follow" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={pageDescription} />
<meta property="og:image" content={new URL(pageImage, Astro.site)} />
<meta property="og:locale" content={SEO_DEFAULT.locale} />
<meta property="og:site_name" content={SEO_DEFAULT.siteName} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={pageTitle} />
<meta property="twitter:description" content={pageDescription} />
<meta property="twitter:image" content={new URL(pageImage, Astro.site)} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<!-- Viewport -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Language -->
<meta http-equiv="Content-Language" content={SEO_DEFAULT.language} />

<!-- JSON-LD Structured Data -->
{jsonLd && (
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
)}
