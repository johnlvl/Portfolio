---
import { PERSONAL_INFO, NAVIGATION_MENU } from '@utils/constants';

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-neutral-200">
  <div class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo / Identity -->
      <a href="/" class="flex items-center gap-3 group">
        <img 
          src={PERSONAL_INFO.profilePhoto} 
          alt={PERSONAL_INFO.profilePhotoAlt}
          class="w-10 h-10 rounded-full object-cover ring-2 ring-neutral-200 group-hover:ring-accent transition-all"
        />
        <span class="font-medium text-neutral-900 group-hover:text-accent transition-colors">
          {PERSONAL_INFO.fullName}
        </span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {NAVIGATION_MENU.map((item) => (
          <li>
            <a 
              href={item.href}
              class:list={[
                "text-sm font-medium transition-colors",
                currentPath === item.href 
                  ? "text-accent" 
                  : "text-neutral-600 hover:text-neutral-900"
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-toggle"
        class="md:hidden p-2 text-neutral-600 hover:text-neutral-900"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <ul class="flex flex-col gap-3">
        {NAVIGATION_MENU.map((item) => (
          <li>
            <a 
              href={item.href}
              class:list={[
                "block py-2 text-sm font-medium transition-colors",
                currentPath === item.href 
                  ? "text-accent" 
                  : "text-neutral-600 hover:text-neutral-900"
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');

  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
